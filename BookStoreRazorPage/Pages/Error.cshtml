{
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="text-danger">@TempData["ErrorAuthorize"]</h1>
    </div>
    TempData.Clear();
}
@if (TempData["Error"] != null)
{
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="text-danger">@TempData["Error"]</h1>
    </div>
    TempData.Clear();
}