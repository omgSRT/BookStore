@page
@model BookStoreRazorPage.Pages.AccountPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4> 
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group">
                <label asp-for="Account.Username" class="control-label"></label>
                <input asp-for="Account.Username" class="form-control" readonly />
                <span asp-validation-for="Account.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label"></label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Name" class="control-label"></label>
                <input asp-for="Account.Name" class="form-control" />
                <span asp-validation-for="Account.Name" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="Account.Avatar" class="control-label"></label>
                <input type="file" asp-for="Account.Avatar" class="form-control" />
                <span asp-validation-for="Account.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Phone" class="control-label"></label>
                <input asp-for="Account.Phone" class="form-control" />
                <span asp-validation-for="Account.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.DateOfBirth" class="control-label"></label>
                <input asp-for="Account.DateOfBirth" class="form-control" />
                <span asp-validation-for="Account.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Account.IsActive" class="control-label"></label>
                <input asp-for="Account.IsActive" class="form-control" readonly />
                <span asp-validation-for="Account.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Account.RoleId" class="control-label"></label>
                <input asp-for="Account.RoleId" class="form-control"  readonly/>
                <span asp-validation-for="Account.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Account.StoreId" class="control-label"></label>
                <input asp-for="Account.StoreId" class="form-control" readonly />
                <span asp-validation-for="Account.StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Address" class="control-label"></label>
                <input asp-for="Account.Address" class="form-control" />
                <span asp-validation-for="Account.Address" class="text-danger"></span>
            </div>
            @if (TempData["ErrorEditProfile"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorEditProfile"]
                </div>
                TempData.Clear();
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.Account.Id">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
