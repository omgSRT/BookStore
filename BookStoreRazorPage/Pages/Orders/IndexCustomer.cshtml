@page
@model BookStoreRazorPage.Pages.Orders.IndexCustomerModel

@{
    ViewData["Title"] = "IndexCustomer";
}

<h1>Order List</h1>
@if (TempData["ResultFailed"] != null)
{
    <div class="alert alert-danger">
        @TempData["ResultFailed"]
    </div>
    TempData.Clear();
}
@if (TempData["ResultSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["ResultSuccess"]
    </div>
    TempData.Clear();
}
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderStatus)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="../OrderDetails/Index" asp-route-orderId="@item.Id" >Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
